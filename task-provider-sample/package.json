{
	"name": "task-provider-samples",
	"displayName": "Task Provider Samples",
	"version": "0.0.1",
	"private": false,
	"description": "Samples for VSCode's view API",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -b",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"taskDefinitions": [
			{
				"properties": {
					"file": {
						"description": "The Rake file that provides the task. Can be omitted.",
						"type": "string"
					},
					"task": {
						"description": "The Rake task to customize",
						"type": "string"
					}
				},
				"required": [
					"task"
				],
				"type": "rake"
			},
			{
				"properties": {
					"flags": {
						"description": "Additional build flags.",
						"type": "array"
					},
					"flavor": {
						"description": "The build flavor. Should be either '32' or '64'.",
						"type": "string"
					}
				},
				"required": [
					"flavor"
				],
				"type": "custombuildscript"
			}
		]
	},
	"activationEvents": [
		"onCommand:workbench.action.tasks.runTask"
	],
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"typescript": "^5.4.2",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
