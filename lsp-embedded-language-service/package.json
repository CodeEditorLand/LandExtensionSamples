{
	"name": "lsp-embedded-language-service-sample",
	"version": "0.0.1",
	"private": false,
	"description": "A language server example using language services to support embedded languages",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"grammars": [
			{
				"language": "html1",
				"path": "./syntaxes/html1.tmLanguage.json",
				"scopeName": "text.html1.basic"
			}
		],
		"languages": [
			{
				"extensions": [
					".html1"
				],
				"id": "html1"
			}
		]
	},
	"activationEvents": [],
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^16.18.34",
		"typescript": "^5.4.2",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
