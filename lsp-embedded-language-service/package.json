{
	"name": "lsp-embedded-language-service-sample",
	"version": "1.0.0",
	"description": "A language server example using language services to support embedded languages",
	"categories": [],
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": "Microsoft Corporation",
	"publisher": "vscode-samples",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"grammars": [
			{
				"language": "html1",
				"scopeName": "text.html1.basic",
				"path": "./syntaxes/html1.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "html1",
				"extensions": [
					".html1"
				]
			}
		]
	},
	"activationEvents": [],
	"devDependencies": {
		"@types/mocha": "10.0.6",
		"@types/node": "20.10.3",
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"@typescript-eslint/parser": "6.13.1",
		"eslint": "8.55.0",
		"typescript": "5.3.2"
	},
	"engines": {
		"vscode": "1.74.0"
	}
}
