{
	"name": "lsp-sample-multi-server",
	"version": "0.0.1",
	"private": false,
	"description": "A multi server LSP example",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"configuration": {
			"properties": {
				"lspMultiServerSample.enable": {
					"default": true,
					"description": "Controls the enablement.",
					"scope": "resource",
					"type": "boolean"
				},
				"lspMultiServerSample.options": {
					"default": {},
					"description": "Additional options.",
					"scope": "resource",
					"type": "object"
				},
				"lspMultiServerSample.trace.server": {
					"default": "off",
					"description": "Traces the communication between VSCode and the language server.",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"scope": "window",
					"type": "string"
				}
			},
			"title": "Multi LSP configuration",
			"type": "object"
		}
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^16.18.34",
		"typescript": "^5.4.2",
		"typescript-esbuild": "0.4.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
