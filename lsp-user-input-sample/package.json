{
	"name": "vscode-codeaction-ui-sample",
	"displayName": "Code Action UI Sample",
	"version": "0.0.1",
	"private": false,
	"description": "Sample to demonstrate code actions with UI",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"clean": "rimraf client/out && rimraf server/out",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run webpack",
		"watch": "tsc -b -w",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"devDependencies": {
		"@types/node": "^18.11.9",
		"merge-options": "^3.0.4",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.3",
		"typescript-esbuild": "0.4.5",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
