{
	"name": "code-tutor",
	"displayName": "Code Tutor",
	"description": "Your personal AI code tutor",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "code-tutor.annotate",
				"icon": "$(comment)",
				"title": "Toggle Tutor Annotations"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "code-tutor.annotate",
					"group": "navigation"
				}
			]
		}
	},
	"activationEvents": [],
	"devDependencies": {
		"@types/node": "22.x"
	}
}
