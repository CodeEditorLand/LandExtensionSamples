{
	"name": "lsp-log-streaming-sample",
	"version": "0.0.1",
	"private": false,
	"description": "A language server example demonstrating log streaming",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"compile": "npm run compile:client && npm run compile:server",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json"
	},
	"contributes": {
		"commands": [
			{
				"command": "languageServerExample.startStreaming",
				"title": "Start Stream Logs into languageServerExample.port"
			}
		],
		"configuration": {
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server.",
					"scope": "resource",
					"type": "number"
				},
				"languageServerExample.port": {
					"default": 7000,
					"description": "The WebSocket port to stream LSP log data into.",
					"scope": "window",
					"type": "number"
				},
				"languageServerExample.trace.server": {
					"description": "Traces the communication between VS Code and the language server.",
					"properties": {
						"format": {
							"default": "text",
							"description": "Controls the output format of the trace.",
							"enum": [
								"text",
								"json"
							],
							"type": "string"
						},
						"verbosity": {
							"default": "off",
							"description": "Controls the verbosity of the trace.",
							"enum": [
								"off",
								"message",
								"verbose"
							],
							"type": "string"
						}
					},
					"scope": "window",
					"type": "object"
				}
			},
			"title": "Example configuration",
			"type": "object"
		}
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.34",
		"mocha": "^10.2.0",
		"typescript": "^5.4.2",
		"typescript-esbuild": "0.4.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
